//bootstrap app
var relationCapitalApp = angular.module('relationCapitalApp', []);

//set up controllers 

//For the dashboard body:
relationCapitalApp.controller('MainController', function MainController($scope) { });

relationCapitalApp.controller('FriendsController', function FriendsController($scope) { });

//routes
relationCapitalApp.config(['$routeProvider',
	function($routeProvider){
		$routeProvider.
			when('/',
			{
				templateUrl: "<%= asset_path 'main.html' %>",
				controller: "MainController"
			}).
			when('/friends',
			{
				templateUrl: "<%= asset_path 'friend.html' %>",
				controller: "FriendsController"
			}).
			otherwise({
				redirectTo:'/'
			});
}]);